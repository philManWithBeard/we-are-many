---
interface Props {
  renting: number;
  people: number;
}

const { renting, people } = Astro.props;
---

<div style="width: 200px;">
  <canvas id="acquisitions" data-renting={renting} data-people={people}
  ></canvas>
</div>

<script>
  import { Chart, DoughnutController, ArcElement } from "chart.js";

  Chart.register(DoughnutController, ArcElement);

  const acquisitions = document.getElementById("acquisitions");

  (async function () {
    const data = {
      datasets: [
        {
          label: "Renters per population",
          data: [acquisitions.dataset.renting, acquisitions.dataset.people],
          backgroundColor: ["#C06A45", "#5B6D93"],
          hoverOffset: 4,
        },
      ],
    };

    new Chart(acquisitions, {
      type: "doughnut",
      data: data,
    });
  })();
</script>

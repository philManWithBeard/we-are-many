---
interface Props {
  linkText: string;
  href: string;
}

const { href, linkText } = Astro.props;
---

<a
  href={href}
  class="bg-dark-blue hover:bg-white text-white hover:text-dark-blue hover:border-dark-blue border underline font-bold py-2 px-4 focus:outline-none focus:shadow-outline max-w-80 w-full text-center"
>
  {linkText}
</a>

---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import electionImage from "../../../src/images/artwork.png";
---

<Layout title=`How Many of Us Are There - Renting`>
  <main class="w-screen text-xl">
    <section
      class="flex flex-col lg:flex-row gap-10 py-10 px-5 text-black justify-center items-center"
    >
      <!-- Left/Top side -->
      <div
        class="flex flex-col gap-5 items-center justify-center text-center lg:max-w-lg"
      >
        <h2 class="text-4xl md:text-6xl block leading">
          I want my Member of Parliament to know: People who rent have a lot of
          votes
        </h2>
        <form class="group" method="POST" novalidate>
          <input
            type="text"
            name="postcode"
            id="postcodeInput"
            class="border text-center border-gray-300 bg-inherit p-3 shadow shadow-gray-100 mt-2 appearance-none outline-none text-neutral-800 invalid:[&:not(:placeholder-shown):not(:focus)]:border-red-500 peer"
            placeholder="Enter Your Postcode"
            required
            pattern="[A-Za-z]{1,2}[0-9Rr][0-9A-Za-z]? [0-9][ABD-HJLNP-UW-Zabd-hjlnp-uw-z]{2}"
          />
          <span
            class="mt-2 hidden text-sm text-red-500 peer-[&:not(:placeholder-shown):not(:focus):invalid]:block"
          >
            Please enter a valid postcode
          </span>
          <button
            type="submit"
            class="bg-dark-blue hover:bg-white text-white hover:text-dark-blue hover:border-dark-blue border underline underline-offset-4 font-bold py-2 px-4 focus:outline-none focus:shadow-outline max-w-80 w-full mt-5 group-invalid:pointer-events-none group-invalid:opacity-70"
            id="postcodeBtn">HOW MANY ARE WITH ME?</button
          >
        </form>
      </div>

      <!--  -->
      <div
        class="flex flex-col gap-5 items-center lg:items-start max-w-80 lg:max-w-lg"
      >
        <Image
          src={electionImage}
          alt="illustration of people waiting to vote"
        />
      </div>
    </section>
  </main>
</Layout>
<script>
  // import { navigate } from "astro:transitions/client";

  const postcodeBtnEl = document.getElementById("postcodeBtn");
  const postcodeInputEl = document.getElementById("postcodeInput");
  console.log("hello world");

  postcodeBtnEl.addEventListener("click", (event) => {
    event.preventDefault();

    const postcode = postcodeInputEl.value;
    retrieveCID(postcode);
  });

  //FTP API fetch
  function retrieveCID(postcode) {
    const queryURL =
      "https://findthatpostcode.uk/postcodes/" + postcode + ".json";
    fetch(queryURL)
      .then(function (response) {
        return response.json();
      })
      .then(function (data) {
        const pconValue = data.data.attributes.pcon_name.replace(/\s/g, "-");
        window.location.href = "./" + pconValue;
      });
  }
</script>
